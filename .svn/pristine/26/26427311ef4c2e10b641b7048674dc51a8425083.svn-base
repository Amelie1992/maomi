.wrap {
	width: 100%;
	background-image: url(../../images/activity/sdj-bg.png);
	background-size: 100% 100%;
	background-repeat: no-repeat;
	background-position: center;
}

.head {
	width: 100%;
}

.head img {
	width: 100%;
}

.content {
	padding: 12px;
	position: relative;
}

.label {
	position: absolute;
	top: 10%;
	left: 10%;
	width: 80%;
}

.textbox {
	width: 100%;
}

.gift {
	position: absolute;
	top: 23%;
	width: 25%;
	left: 10%;
}

.sdj-btn {
	position: absolute;
	width: 40%;
	bottom: 15%;
	right: 20%;
}

.textInner {
	position: absolute;
	top: 25%;
	left: 38%;
	width: 50%;
	line-height: 20px;
	font-size: 12px;
	color: #E62B12;
}

.sdj-btn {
	
}

.tips {
	padding: 30px 12px 18px 12px;
	color: #007e22;
	font-size: 14px;
}

.tips-title {
	text-align: center;
	font-size: 16px;
	padding-bottom: 18px;
}

.tips-title .bar {
	display: inline-block;
	width: 35%;
	height: 2px;
	background-color: #007E22;
}

.tips li {
	line-height: 25px;
	text-align: left;
	font-size: 12px;
}

.tips h4 {
	text-align: center;
	font-size: 12px;
	color: #e62b12;
	padding: 30px 0 0 10px;
}